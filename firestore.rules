// Default Firestore DB rules (dev-safe, client read only; writes via Functions only)
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow read-only access from any client for dev/demo (tighten later)
    match /{document=**} {
      allow read: if true;
      allow write: if false; // all writes must go through Cloud Functions
    }
  }
}
