{
  "name": "lead-notifier",
  "version": "1.0.0",
  "description": "Electron app that shows a desktop notification when a new lead is added to Firestore.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "package-win": "npx @electron/packager . lead-notifier --platform=win32 --arch=x64 --out=dist --overwrite",
    "dev": "concurrently -k -r \"npm:dev:*\"",
    "dev:preload": "esbuild src/main/preload.ts --bundle --platform=node --format=cjs --outfile=dist/main/preload.cjs --sourcemap",
    "dev:renderer": "vite",
    "dev:main": "wait-on tcp:5173 && electron .",
    "build": "vite build && npm run build:preload",
    "build:preload": "esbuild src/main/preload.ts --bundle --platform=node --format=cjs --outfile=dist/main/preload.cjs",
    "dist": "npm run build && electron-builder"
  },
  "build": {
    "appId": "com.priority.leadsync",
    "productName": "Priority Lead Sync",
    "files": [
      "dist/**/*",
      "main.js",
      "package.json"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis"
    }
  },
  "author": "Rob Brasco",
  "license": "MIT",
  "dependencies": {
    "auto-launch": "^5.0.6",
    "dotenv": "^17.2.1",
    "electron-store": "^10.1.0",
    "firebase": "^10.14.1",
    "firebase-admin": "^13.4.0",
    "play-sound": "^1.1.6"
  },
  "devDependencies": {
    "@electron/packager": "^18.0.0",
    "concurrently": "^9.0.0",
    "electron": "^31.0.0",
    "electron-builder": "^24.13.3",
    "esbuild": "^0.23.0",
    "vite": "^5.3.0",
    "wait-on": "^7.2.0"
  }
}
