{
  "name": "lead-notifier",
  "version": "1.0.0",
  "description": "Electron app that shows a desktop notification when a new lead is added to Firestore.",
  "main": "main.js",
  "scripts": {
    "dev": "concurrently -k -r \"npm:dev:*\"",
    "dev:renderer": "vite",
    "dev:preload": "esbuild src/main/preload.ts --bundle --platform=node --format=cjs --outfile=dist/main/preload.cjs --sourcemap --watch",
    "dev:main": "cross-env VITE_DEV_SERVER_URL=http://localhost:5173 wait-on tcp:5173 && electron .",
    "build": "vite build && esbuild src/main/preload.ts --bundle --platform=node --format=cjs --outfile=dist/main/preload.cjs --sourcemap",
    "dist": "npm run build && electron-builder",
    "test": "echo \"(placeholder)\" && exit 0"
  },
  "build": {
    "appId": "com.priority.leadsync",
    "productName": "Priority Lead Sync",
    "directories": { "output": "dist" },
    "files": [
      "dist/main/**",
      "dist/renderer/**",
      "package.json",
      "main.js"
    ],
    "win": { "target": "nsis" },
    "nsis": {
      "oneClick": true,
      "allowToChangeInstallationDirectory": false
    }
  },
  "author": "Rob Brasco",
  "license": "MIT",
  "dependencies": {
    "auto-launch": "^5.0.6",
    "dotenv": "^17.2.1",
    "electron-store": "^10.1.0",
    "firebase": "^10.14.1",
    "firebase-admin": "^13.4.0",
    "play-sound": "^1.1.6"
  },
  "devDependencies": {
    "concurrently": "^9.0.1",
    "cross-env": "^7.0.3",
    "electron": "^31.2.0",
    "electron-builder": "^24.13.3",
    "esbuild": "^0.23.1",
    "vite": "^5.4.6",
    "wait-on": "^7.2.0"
  }
}
